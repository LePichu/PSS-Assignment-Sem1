{
	"imports": {
		"lume/": "https://deno.land/x/lume@v2.3.0/"
	},
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
		"build": "deno task lume",
		"serve": "deno task lume -s"
	},
	"compilerOptions": {
		"types": [
			"lume/types.ts"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/preact@10.11.0"
	},
	"fmt": {
		"semiColons": false,
		"useTabs": true,
		"indentWidth": 4
	}
}
